{
  "name": "hub_assets",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "npm run copy:types; svelte-kit sync && npm run smui-theme-light && npm run smui-theme-dark",
    "smui-theme-light": "smui-theme compile src/hub_assets/public/smui.css -i src/hub_assets/src/theme",
    "smui-theme-dark": "smui-theme compile src/hub_assets/public/smui-dark.css -i src/hub_assets/src/theme/dark",
    "build": "npm install; npm run prepare; DFX_ENV=local rollup -c",
    "dev": "npm install; npm run prepare; rollup -c -w",
    "start": "sirv src/hub_assets/public --no-clear",
    "copy:types": "rsync -avr .dfx/$(echo ${DFX_NETWORK:-'**'})/canisters/** --exclude='assets/' --exclude='idl/' --exclude='*.wasm' --delete src/declarations"
  },
  "devDependencies": {
    "@connect2ic/core": "^0.0.7",
    "@connect2ic/svelte": "^0.0.9",
    "@dfinity/agent": "^0.11.2",
    "@dfinity/auth-client": "^0.11.2",
    "@dfinity/candid": "^0.11.2",
    "@dfinity/identity": "^0.11.2",
    "@dfinity/principal": "^0.11.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-replace": "^3.0.0",
    "@smui-extra/accordion": "^6.0.0-beta.16",
    "@smui/button": "^6.0.0-beta.16",
    "@smui/card": "^6.0.0-beta.16",
    "@smui/checkbox": "^6.0.0-beta.16",
    "@smui/circular-progress": "^6.0.0-beta.16",
    "@smui/common": "^6.0.0-beta.16",
    "@smui/data-table": "^6.0.0-beta.16",
    "@smui/drawer": "^6.0.0-beta.16",
    "@smui/fab": "^6.0.0-beta.16",
    "@smui/form-field": "^6.0.0-beta.16",
    "@smui/icon-button": "^6.0.0-beta.16",
    "@smui/layout-grid": "^6.0.0-beta.16",
    "@smui/list": "^6.0.0-beta.16",
    "@smui/menu": "^6.0.0-beta.16",
    "@smui/menu-surface": "^6.0.0-beta.16",
    "@smui/paper": "^6.0.0-beta.16",
    "@smui/select": "^6.0.0-beta.16",
    "@smui/snackbar": "^6.0.0-beta.16",
    "@smui/tab": "^6.0.0-beta.16",
    "@smui/tab-bar": "^6.0.0-beta.16",
    "@smui/textfield": "^6.0.0-beta.16",
    "@smui/top-app-bar": "^6.0.0-beta.16",
    "@sveltejs/kit": "^1.0.0-next.324",
    "bignumber.js": "^9.0.2",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-inject": "^3.0.2",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-polyfill-node": "^0.7.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "smui-theme": "^6.0.0-beta.16",
    "svelte": "^3.0.0",
    "svelte-router-spa": "^6.0.3",
    "uuid": "^8.3.2"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0",
    "svelte-material-ui": "^6.0.0-beta.16"
  }
}
